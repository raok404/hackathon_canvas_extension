{
  "name": "Early Bird",
  "description": "A productivity-focused AI-assisted extension for Canvas that rewards early work habits.",
  "version": "1.0",
  "manifest_version": 3,

  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel",
    "notifications"
  ],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "js": ["scripts/content.js", "calendar.js"],
      "matches": ["https://*.instructure.com/"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "hello.html",
    "default_icon": "temp_icon.png"
  },

  "side_panel": {
    "default_path": "sidebar.html"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "scripts/cardinal-37075.mp3",
        "timer.html",
        "timer.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
