{
  "name": "Early Bird",
  "description": "Gamified focus and productivity assistant for Canvas",
  "version": "1.0",
  "manifest_version": 3,

  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128":  "images/logo.png"
  },

  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://*.instructure.com/"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "hello.html",
    "default_icon": "temp_icon.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["sidePanel", "storage", "activeTab", "scripting"],

  "side_panel": {
    "default_path": "sidebar.html"
  },

  "web_accessible_resources": [
    {
      "resources": ["cardinal-37075.mp3"],
      "matches": ["<all_urls>"]
    }
  ]
}
